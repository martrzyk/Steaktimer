<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/FullHeightDialog"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_dialog_white"
    android:minHeight="100dp"
    android:paddingBottom="30dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="30dp" >

    <TextView
        android:id="@+id/textViewErrorLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/login_to_use_functionality"
        android:textColor="@android:color/darker_gray"
        android:layout_alignParentTop="true"
        android:textSize="15sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/top_line"
        android:src="@drawable/background_line"
        android:layout_marginTop="10dp"
        android:layout_below="@id/textViewErrorLayout" />

    <TextView
        android:id="@+id/buttonGoToLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_line"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:text="@string/login"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="@color/primary_color" />
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_below="@id/buttonGoToLogin"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/bottom_line"
        android:layout_marginTop="10dp"
        android:src="@drawable/background_line" />

    <TextView
        android:id="@+id/buttonCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bottom_line"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:text="@string/cancel"
        android:gravity="center"
        android:textColor="@color/primary_color"/>


</RelativeLayout>