<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/questions_include"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:visibility="visible">



    <ImageView
        android:id="@+id/nothing_to_show_icon_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/empty_box"/>

    <TextView
        android:id="@+id/nothing_to_show_tv_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nothing_to_show_icon_question"
        android:layout_centerHorizontal="true"
        android:text="@string/event_questions_login"/>


    <android.support.v7.widget.CardView
        android:id="@+id/questions_chat_message_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/PanelView"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <ImageView
                android:id="@+id/questions_chat_message_send_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:src="@drawable/ic_send_black_36dp"
                android:visibility="visible"/>

            <me.zhanghai.android.materialprogressbar.MaterialProgressBar
                android:id="@+id/question_chat_message_send_progress"
                style="@style/Widget.MaterialProgressBar.ProgressBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:indeterminate="true"
                android:visibility="invisible"
                app:mpb_progressStyle="circular"/>

            <EditText
                android:id="@+id/questions_chat_message_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/questions_chat_message_send_button"
                android:layout_alignTop="@id/questions_chat_message_send_button"
                android:layout_toLeftOf="@id/questions_chat_message_send_button"
                android:background="@null"
                android:gravity="left|center_vertical"
                android:hint="@string/add_question"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/questions_chat_list_swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/questions_chat_message_box">

        <ListView
            android:id="@+id/questions_chat_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/ListView"/>
    </android.support.v4.widget.SwipeRefreshLayout>


</RelativeLayout>