<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_weight="1"
    style="@style/PanelView">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/speaker_small_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:src="@drawable/blank_contact"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/speaker_small_name"
            style="@style/ListItemHeadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/speaker_small_image"
            android:layout_centerHorizontal="true"
            android:paddingTop="5dp"
            android:gravity="center|top"
            android:lines="2"
            android:ellipsize="end"
            />

        <ProgressBar
            android:id="@+id/speaker_small_progress"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:visibility="visible"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>



