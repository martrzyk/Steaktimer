<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <FrameLayout
        android:id="@+id/badge_on_list_image_frame"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="5dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/badge_on_list_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/badge_empty"
            android:visibility="gone"/>

        <ProgressBar
            android:id="@+id/badge_on_list_image_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

    </FrameLayout>

    <TextView
        android:id="@+id/badge_on_list_name"
        style="@style/ListItemHeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/badge_on_list_image_frame"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="NAME"
        />
</RelativeLayout>

