<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content" 
    android:background="@drawable/rounded_dialog_white"
    android:minHeight="100dp"
    style="@style/FullHeightDialog"
    android:paddingTop="30dp"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingBottom="30dp">

    <TextView
        android:id="@+id/textViewErrorLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:gravity="center"
	    android:textColor="@android:color/black"
		android:text="The user doesn't have the Facebook Messenger app for Android app installed."/>

    <TextView
        android:id="@+id/buttonFacebookOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textViewErrorLayout"
        android:layout_below="@+id/textViewErrorLayout"
        android:layout_marginRight="38dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_edittext"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:text="@string/cancel"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/buttonFacebookGooglePlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonFacebookOk"
        android:layout_alignBottom="@+id/buttonFacebookOk"
        android:layout_alignLeft="@+id/textViewErrorLayout"
        android:layout_marginLeft="18dp"
        android:background="@drawable/rounded_edittext"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:text="Google Play"
        android:textColor="@android:color/black" />
    
</RelativeLayout>