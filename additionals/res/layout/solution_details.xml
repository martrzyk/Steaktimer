<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/solution_details_include"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lighter_gray_background"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:id="@+id/solution_single_description_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="80dp"
                style="@style/PanelView">

                <TextView
                    android:id="@+id/textViewSolutionSingleInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="TextView"
                    android:autoLink="all" />


            </android.support.v7.widget.CardView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/solution_single_documents_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/solution_single_description_card"
            android:layout_margin="5dp"
            android:visibility="gone"
            >

            <LinearLayout
                android:id="@+id/linearLayoutForDocsInSolution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:orientation="vertical"
                android:visibility="visible"/>
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>